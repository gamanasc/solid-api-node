{
  "compilerOptions": {

    "module": "nodenext",
    "target": "es2017",
    "types": [],
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "noUncheckedIndexedAccess": true,
    // "exactOptionalPropertyTypes": true,

    "strict": false,
    "allowJs": true,

    "jsx": "react-jsx",
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
  },
  "include": [
    "src/**/*.ts"
  ]
    
  
}
